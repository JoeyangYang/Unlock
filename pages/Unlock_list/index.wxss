/* pages/Unlock_list/index.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: white;
  font-size: 26rpx;
  font-family: 微软雅黑;
}
.all{
  width: 100%;
  height: 100%;
}
.header{
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #E5E5E5;
}
.head{
  width: 80rpx;
  height: 76rpx;
  margin-left: 5%;
  line-height: 80rpx;
  text-align: center;
  color: #FFBC12;
  font-size: 30rpx;
  font-weight: 600;
  border-bottom: #FFBC12 solid 4rpx;
}
.main{
  width: 100%;
  height: 980rpx;
}
.left{
  width: 24%;
  height: 100%;
  background-color: #F8F8F8;
  float: left;
  overflow-y: auto;
}
.left .category{
  width: 58%;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 21%;
  border-bottom: solid 2rpx #DFDFDF;
  padding-left: 5%;
  box-sizing: border-box;
  color: #707070;
  font-weight: 600;
}
.right{
  width: 76%;
  height: 100%;
  float: left;
  overflow-y: auto;
}
/*列表页*/
.lock_list{
  width: 95%;
  height: 190rpx;
  margin-left: 5%;
  margin-top: 30rpx;
  border-bottom: solid 2rpx #DFDFDF;
}
.list{
  width: 100%;
  height: 160rpx;
}
.list .img{
  width: 160rpx;
  height: 160rpx;
  float: left;
}
.list .img image{
  width: 160rpx;
  height: 160rpx;
}
.list .describe{
  width: 68%;
  height: 160rpx;
  float: left;
}
.describedetail{
  width: 100%;
  height: auto;
  line-height: 40rpx;
}