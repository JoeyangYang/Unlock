/* pages/Unlock_detail/index.wxss */
page{
  width: 100%;
  height: 100%;
  font-size: 26rpx;
  font-family: 微软雅黑;
  background-color: #EEEEEE;
}
.all{
  width: 100%;
  height: 100%;
}
.header{
  width: 100%;
  height: 400rpx;
}
.main{
  width: 100%;
  height: auto;
  background-color: white;
}
.title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 5%;
  font-size: 30rpx;
  font-weight: 600;
}
.describe{
  width: 100%;
  height: auto;
  line-height: 50rpx;
  padding-left: 5%;
  padding-right: 4%;
  box-sizing: border-box;
}
/* 详情 */
.detail{
  width: 100%;
  height: auto;
  margin-top: 25rpx;
}
.details{
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  padding-left: 5%;
  color: #FFBC12;
  line-height: 80rpx;
  background-color: white;
}
.details_img{
  width: 100%;
  height: auto;
}
.details_img image{
  width: 100%;
  height: 100%;
}
/* 底部 */
.bottom{
  width: 100%;
  height: 85rpx;
  background-color: #FFBC12;
  text-align: center;
  line-height: 85rpx;
  position: fixed;
  bottom: 0;
  color: white;
  letter-spacing: 3rpx;
}