/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  font-family: 微软雅黑;
}
.all{
  width: 100%;
  height: 100%;
  background-color: #FFBC12;
  overflow: hidden;
  background: linear-gradient(to right,#ffb700,#ffc636,#ffb700);
}
.main{
  width: 60%;
  height: 550rpx;
  margin-top: 35%;
}
.logo{
  width: 180rpx;
  height: 180rpx;
}
.logo image{
  width: 100%;
  height: 100%;
}
.name{
  width: 100%;
  height: 85rpx;
  line-height: 85rpx;
  text-align: center;
  font-size: 75rpx;
  letter-spacing: 3rpx;
  margin-top: 20rpx;
  color: white;
}
.life{
  width: 50%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 22rpx;
  color: #FFBC12;
}
.life .left{
  width: 20%;
  height: 2rpx;
  margin-top: 24rpx;
  float: left;
  background-color: white;
}
.life .middle{
  width: 60%;
  height: 30rpx;
  float: left;
  color: white;
}
.life .right{
  width: 20%;
  height: 2rpx;
  margin-top: 24rpx;
  float: left;
  background-color: white;
}
.phone{
  width: 100%;
  height: 80rpx;
  background-color: white;
  margin-top: 130rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 2rpx 5rpx 0rpx c89000;
}
.callPhone{
  width: 40%;
  height: 48rpx;
  margin-top:16rpx; 
}
.callPhone .left{
  width: 48rpx;
  height: 48rpx;
  float: left;
  text-align: center;
}
.callPhone .left image{
  width: 32rpx;
  height: 32rpx;
  margin-top: 8rpx;
}
.callPhone .right{
  width: auto;
  height: 48rpx;
  float: left;
  padding-left: 10rpx;
  line-height: 48rpx;
  font-size: 30rpx;
  color: #FFBC12;
  font-weight: 600;
}